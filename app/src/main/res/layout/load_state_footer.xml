<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <Button
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/please_try_again"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/button_retry"
        app:layout_constraintStart_toStartOf="@+id/button_retry"
        app:layout_constraintTop_toBottomOf="@+id/button_retry" />

    <ProgressBar
        android:id="@+id/progress_bar_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_try_again"
        app:layout_constraintStart_toStartOf="@+id/text_view_try_again"
        app:layout_constraintTop_toBottomOf="@+id/text_view_try_again" />

</androidx.constraintlayout.widget.ConstraintLayout>